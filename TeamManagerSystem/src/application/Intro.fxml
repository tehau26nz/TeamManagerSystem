<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SceneController">
   <children>
      <Pane prefHeight="640.0" prefWidth="960.0">
         <children>
            <Button fx:id="skipBtn" layoutX="380.0" layoutY="513.0" mnemonicParsing="false" onAction="#switchToLoginSelection" prefHeight="50.0" prefWidth="200.0" text="Skip">
               <font>
                  <Font name="Gill Sans MT Bold" size="18.0" />
               </font></Button>
            <Label fx:id="descriptionLabel" alignment="CENTER" layoutX="230.0" layoutY="345.0" prefHeight="100.0" prefWidth="500.0" text="From team management to your game" textAlignment="CENTER">
               <font>
                  <Font name="Gill Sans MT" size="18.0" />
               </font>
            </Label>
            <ImageView fx:id="logoImage" fitHeight="150.0" fitWidth="146.0" layoutX="407.0" layoutY="195.0">
               <image>
                  <Image url="@../football_color_icon.png" />
               </image>
            </ImageView>
            <Label fx:id="headerLabel" alignment="CENTER" layoutX="280.0" layoutY="128.0" prefHeight="50.0" prefWidth="400.0" text="Welcome to Footy" textAlignment="CENTER">
               <font>
                  <Font name="Gill Sans MT" size="24.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </children>
</AnchorPane>
